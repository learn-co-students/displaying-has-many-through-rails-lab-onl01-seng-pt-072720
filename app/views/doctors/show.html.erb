<%= @doctor.name %>
<br>
<% @doctor.appointments.each do |appt| %>
    <% @patient = @doctor.patients.find(appt.patient_id) %>
    <%= link_to @patient.name, patient_path(@patient) %> - <%= link_to appt.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(appt) %>
    <br>
<% end %>